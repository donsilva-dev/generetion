package tarefas;

import java.util.Scanner;

public class Exercicio02 {

	public static void main(String[] args) {
		/*
		 * 2) Escreva um algoritmo em Java, que leia um número inteiro via teclado e
		 * mostre na tela uma mensagem indicando se este número é par ou ímpar e se o
		 * número é positivo ou negativo. Veja os exemplos abaixo:
		 * 
		 */

		Scanner sc = new Scanner(System.in);

		System.out.println("Digite um número: ");
		int N = sc.nextInt();

		if (N % 2 == 0) {
			System.out.println("O Número " + N + " é par e positivo!");

		}
		
		if (N % -2 == 1) {
			System.out.println("O Número " + N + " é ímpar e negativo!!");

		}

		sc.close();

	}

}
